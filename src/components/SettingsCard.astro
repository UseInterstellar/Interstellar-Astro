---
interface Props {
  Icon: (props: astroHTML.JSX.SVGAttributes) => unknown;
  title: string;
  description: string;
}
const { Icon, title, description } = Astro.props;
---

<div class="settings-card relative z-0 p-5 bg-white/[0.03] border border-white/10 rounded group hover:border-white/20 hover:bg-white/[0.05] transition-all">
  <div class="flex items-center gap-2 mb-2">
    <Icon class="w-4 h-4 text-accent" stroke-width="1.5" />
    <h3 class="text-sm font-medium text-text uppercase tracking-wide">{title}</h3>
  </div>
  <p class="text-xs text-text-secondary mb-4">{description}</p>
  <slot />
</div>
