{
  "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
  "files": {
    "ignore": [
      "**/pnpm-lock.yaml",
      "**/dist/**",
      "**/node_modules/**",
      "**/assets/bundled/**",
      "*.min.json",
      "**/*.astro"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 85,
    "attributePosition": "auto"
  },
  "javascript": {
    "formatter": {
      "enabled": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentWidth": 3
    },
    "linter": {
      "enabled": true
    }
  }
}
