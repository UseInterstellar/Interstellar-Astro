{
  "$schema": "https://biomejs.dev/schemas/2.3.9/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!**/src/global.css", "!**/.astro"]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 320,
    "attributePosition": "auto"
  },
  "javascript": {
    "formatter": {
      "enabled": true
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentWidth": 3
    },
    "linter": {
      "enabled": false
    },
    "parser": {
      "cssModules": true
    }
  },
  "overrides": [
    {
      "includes": ["**/*.astro"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedImports": "off",
            "noUnusedVariables": "off"
          }
        }
      }
    }
  ]
}
